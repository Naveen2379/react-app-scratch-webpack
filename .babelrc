{
    "presets": [
        "@babel/preset-env",
        [
            "@babel/preset-react",
            {
                "runtime": "automatic"
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            /** let's you use async/await features in a react app */
          "@babel/plugin-transform-runtime",
          {
            "regenerator": true
          }
        ]
      ]
}